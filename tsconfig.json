{
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": "./",
    "target": "es2017",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "emitDeclarationOnly": false,
    "declaration": true,
    "typeRoots": ["./node_modules/@types"]
  }
}
